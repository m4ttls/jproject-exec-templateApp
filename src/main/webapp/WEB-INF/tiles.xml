       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

	<!-- template general -->
	<definition name="base.definition" template="/WEB-INF/tiles/layout.jsp">
		<put-attribute name="title" 	value="templateApp" />
		<put-attribute name="header" 	value="/WEB-INF/tiles/header.jsp" />
		<put-attribute name="body" 		value="" />
	</definition>
	
		
	<!-- paginas que utilizan el template general -->
	<definition name="securePage01" extends="base.definition">
		<put-attribute name="body" value="/WEB-INF/jsp/securePage01.jsp" />
	</definition>


	<!-- paginas que NO utilizan el template general -->
	<definition name="unsegurePage" template="/WEB-INF/jsp/unsegurePage.jsp">
	</definition>
	
	<definition name="login" template="/WEB-INF/jsp/login.jsp">
	</definition>
	
